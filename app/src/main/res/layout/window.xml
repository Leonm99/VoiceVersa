<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#43000000"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        android:minHeight="220dp"
        android:theme="@style/MyCardView"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:orientation="vertical">

            <FrameLayout
                android:id="@+id/contentContainer"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:minHeight="220dp">

                <ProgressBar
                    android:id="@+id/loading"
                    style="?android:attr/progressBarStyle"
                    android:layout_width="451dp"
                    android:layout_height="102dp"
                    android:layout_gravity="center"
                    android:clickable="false"
                    android:longClickable="false" />

                <ScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"

                    android:padding="10dp">

                    <TextView
                        android:id="@+id/result_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:elevation="30dp"
                        android:fontFamily="@font/roboto"
                        android:textAlignment="viewStart"
                        android:textColor="#1D1D1D"
                        android:textSize="16sp" />
                    <!-- android:shadowColor="#20000000"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="10" -->
                </ScrollView>

            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="top"
                android:orientation="horizontal">

                <ImageButton
                    android:id="@+id/summarize_content"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"

                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:src="@drawable/summarize" />

                <ImageButton
                    android:id="@+id/content_button"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:src="@drawable/save" />

                <ImageButton
                    android:id="@+id/window_close"
                    android:layout_width="0dp"
                    android:layout_height="50dp"
                    android:layout_weight="1"
                    android:scaleX="1.3"
                    android:scaleY="1.3"
                    android:background="?attr/selectableItemBackgroundBorderless"

                    android:src="@drawable/delete" />
            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>