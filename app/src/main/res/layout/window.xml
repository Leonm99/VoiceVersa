<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#43000000"
    android:orientation="vertical">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:minHeight="220dp"
        android:theme="@style/MyCardView"

        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay.MaterialCardView.Cut">

        <FrameLayout
            android:id="@+id/contentContainer"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="50dp"
            android:minHeight="220dp">

            <ProgressBar
                android:id="@+id/loading"
                style="?android:attr/progressBarStyle"
                android:layout_width="451dp"
                android:layout_height="102dp"
                android:layout_gravity="center"
                android:clickable="false"
                android:longClickable="false" />

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:padding="10dp">

                <TextView
                    android:id="@+id/result_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:elevation="30dp"
                    android:fontFamily="@font/roboto"
                    android:textAlignment="viewStart"
                    android:textColor="#1D1D1D"
                    android:textSize="16sp" />
                <!-- android:shadowColor="#20000000"
                    android:shadowDx="4"
                    android:shadowDy="4"
                    android:shadowRadius="10" -->
            </ScrollView>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_gravity="bottom"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/summarize_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/summarize"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/translate_content"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/translate"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/content_button"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/save"
                android:contentDescription="@string/todo" />

            <ImageButton
                android:id="@+id/window_close"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="@android:color/transparent"
                android:scaleX="1.5"
                android:scaleY="1.5"
                android:src="@drawable/delete"
                android:contentDescription="@string/todo" />

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</FrameLayout>